{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 mt-4 text-center">
    <table class="table table-condensed mt-3">
        <tr>
            <th>Name</th>
            <th>Products</th>
            <th>Menu</th>
        </tr>
            <tr>
                <td>{{ category.name }}</td>
                <td> </td>
