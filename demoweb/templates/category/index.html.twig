{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 mt-4 text-center">
    <a href="{{ path('category_add')}} ">
        <img src="{{ asset('images/add.png') }}" width="50" height="50">
    </a>
    <table class="table table-condensed mt-3">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Menu</th>
        </tr>
        {% for c in category %}
            <tr>
                <td>{{ c.id }}</td>
                <td>
                <a href="{{ path('category_detail', {'id' : c.id } )}}">{{ c.name }}</a>
                </td>
                <td>
                    <a class="btn btn-info" href="{{ path('category_detail', {'id' : c.id } )}}">Detail</a>
                    <a class="btn btn-warning" href="{{ path('category_edit', {'id' : c.id } )}}">Edit</a>
                    <a class="btn btn-danger" href="{{ path('category_delete', {'id' : c.id } )}}"
                    onclick = "return confirm('Do you want to delete this category ?')"
                    >Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>

</div>
{% endblock %}